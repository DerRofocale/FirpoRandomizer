<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <SolidColorBrush x:Key="GreenLight" Color="{DynamicResource greenLight}" />
    <Color x:Key="greenLight">#7cc769</Color>
    <SolidColorBrush x:Key="Green" Color="{DynamicResource green}" />
    <Color x:Key="green">#5dbb46</Color>
    <SolidColorBrush x:Key="GreenDark" Color="{DynamicResource greenDark}" />
    <Color x:Key="greenDark">#59a83d</Color>


    <SolidColorBrush x:Key="Black" Color="{DynamicResource black}" />
    <Color x:Key="black">#050708</Color>

    <SolidColorBrush x:Key="Red" Color="{DynamicResource red}" />
    <Color x:Key="red">#cc0022</Color>
    <SolidColorBrush x:Key="RedDark" Color="{DynamicResource redDark}" />
    <Color x:Key="redDark">#660011</Color>
</ResourceDictionary>